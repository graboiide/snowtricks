        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <header>
         <div class="container-fluid" id="home">
                <div class="row">
                    <div class="img-header">
                        <nav class="navbar navbar-expand-sm navbar-dark sticky-top my-nav" >
                            <!-- Brand -->
                            <a class="navbar-brand" href="#"><img src="/img/logo.png" alt=""></a>


                            <!-- Links -->
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Me connecter</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mes tricks</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mon profil</a>
                                </li>

                                <!-- Dropdown -->

                            </ul>
                        </nav>
                        <div class="to-tricks">
                            <a href="#tricks" class="smooth-scroll">
                                <div class="round">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </a>
                        </div>

                        <div class="reverse-degrade d-flex justif">

                        </div>
                    </div>
                    <div class="degrade">

                    </div>
                </div>
            </div>
    </header>
        {% block body %}{% endblock %}
    <script>
        $(window).scroll(function() {
            var scroll = $(window).scrollTop();

            if (scroll >= 280) {
                $(".my-nav").addClass("bg-dark");
                $(".to-tricks").fadeOut();
            } else {
                $(".my-nav").removeClass("bg-dark");
                $(".to-tricks").fadeIn();
            }
            if(scroll >= 1080){
                $(".to-tricks-top").fadeIn();
            } else {
                $(".to-tricks-top").fadeOut();
            }
        });
        $(document).ready(function() {
            $('.smooth-scroll').on('click', function() { // Au clic sur un élément
                var page = $(this).attr('href'); // Page cible
                var speed = 400; // Durée de l'animation (en ms)
                $('html, body').animate( { scrollTop: $(page).offset().top }, speed ); // Go
                return false;
            });
        });
    </script>
        {% block javascripts %}

        {% endblock %}
    </body>
</html>
