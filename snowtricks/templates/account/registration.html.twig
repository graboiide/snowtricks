{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-fluid center-div">
    <div class="row " >
        <div class="col-md-3">

        </div>
        <div class="col-md-6 col-sm-12 bg-light p-4">
            <h1 style="color: #476f9e" class=" mb-5">S'inscrire' !</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.hash) }}
            {{ form_row(form.passwordConfirm) }}

            <button type="submit" class="btn btn-primary">S'enregistrer</button>
            {{ form_end(form) }}

        </div>
    </div>

</div>
{% endblock %}
